<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartKategori"
            android:layout_width="match_parent"
            android:background="@drawable/bg_laba"
            android:layout_height="250dp"
            android:padding="8dp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textTotalKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Total: Rp 0"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Rincian per Kategori:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/bg_laba"
        android:layout_height="200dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/colorDivider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/layoutDetailKategori"
                android:background="@drawable/bg_card"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp" />
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</LinearLayout>